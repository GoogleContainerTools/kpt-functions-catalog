    io.k8s.cli.substitutions.fullimage:
      x-k8s-cli:
        substitution:
          name: fullimage
          pattern: ${image}:${tag}
          values:
          - marker: ${image}
            ref: '#/definitions/io.k8s.cli.setters.image'
          - marker: ${tag}
            ref: '#/definitions/io.k8s.cli.setters.tag'
