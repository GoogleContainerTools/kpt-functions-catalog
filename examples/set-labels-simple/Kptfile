apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: example
  annotations:
    config.kubernetes.io/local-config: "true"
pipeline:
  mutators:
    - image: gcr.io/kpt-fn/set-labels:unstable
      configMap:
        color: orange
        fruit: apple
      selectors:
        - kind: ConfigMap
        - kind: MyResource
